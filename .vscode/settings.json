{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/*lock.*": false,
		"**/node_modules": true,
		"**/dashboard": false,
		"**/expense_tracker": true,
		"**/file_manager": true,
		"**/secrets_manager": true
	},
	"files.associations": {
		"*.html": "django-html",
		"*.js": "javascript",
		"*.css": "tailwindcss",
		"*.md": "markdown"
	},

	"emmet.includeLanguages": {
		"django-html": "html"
	},
	"sqltools.connections": [
		{
			"previewLimit": 50,
			"driver": "SQLite",
			"name": "django-db",
			"database": "./homelab/db.sqlite3"
		}
	],
	"[django-html]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "monosans.djlint",
		"editor.quickSuggestions": {
			"other": true,
			"comments": true,
			"strings": true
		}
	}
}
